{
  "family": "zalo-phake-chat-be-task",
  "containerDefinitions": [
    {
      "name": "zalo-phake-chat-be",
      "image": "python:3.10-slim",
      "cpu": 128,
      "memory": 256,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "hostPort": 5000,
          "protocol": "tcp"
        }
      ],
      "command": [
        "python",
        "-m",
        "uvicorn",
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "5000",
        "--log-config",
        "app/conf/log_conf.yaml"
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "ap-southeast-1"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "<aws_access_key_id>"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "<aws_secret_access_key>"
        },
        {
          "name": "AWS_DEFAULT_REGION",
          "value": "ap-southeast-1"
        },
        {
          "name": "SQS_URL",
          "value": "https://sqs.ap-southeast-1.amazonaws.com/634776368936/phuoc-test-sqs"
        },
        {
          "name": "FIREBASE_SECRET",
          "value": "<firebase_secret>"
        },
        {
          "name": "REDIS_HOST",
          "value": "<redis_host>"
        },
        {
          "name": "REDIS_PASSWORD",
          "value": "<redis_password>"
        },
        {
          "name": "ENVIRONMENT",
          "value": "DEV"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/zalo-phake-be-task",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::048283574447:role/Execution-ECS",
  "taskRoleArn": "arn:aws:iam::048283574447:role/Execution-ECS"
}
